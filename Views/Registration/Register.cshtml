@model RegistrationModel
@{
    ViewData["Title"] = "Register";
}

<div>
    <h1 class="display-4">Registre o usuário</h1>
</div>
<br />

<form asp-controller="Registration" asp-action="CreateRegister" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" aria-describedby="emailHelp" placeholder="Digite o nome">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email">
    </div>
    <div class="form-group">
        <label for="cpf">Cpf</label>
        <input type="text" asp-for="Cpf" class="form-control" placeholder="Digite o cpf">
    </div>
    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Digite o telefone">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Criar</button>
    <a class="btn btn-secondary" asp-controller="Registration" asp-action="Index" role="button">Voltar</a>
</form>